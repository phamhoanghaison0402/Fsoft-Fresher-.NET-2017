@using PagedList.Mvc
@model PagedList.IPagedList<IPM.Model.Models.InterviewRound>

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">@IPM.Web.MultiLanguage.Resource.DetailRound</h4>
    </div>
    <div class="modal-body">

        @using (Ajax.BeginForm("Detail", "InterviewRound", FormMethod.Post, new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "POST", UpdateTargetId = "interviewRound" }))

        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            if (Model != null)
            {
                foreach (var interviewRound in Model)
                {
                    <div class="form-group">
                        <label><span class="glyphicon "></span>@IPM.Web.MultiLanguage.Resource.RoundName</label>
                        <input type="text" name="roundName" class="form-control"  value="@interviewRound.RoundName" />
                    </div>

                    <div class="form-group">
                        <label><span class="glyphicon "></span>@IPM.Web.MultiLanguage.Resource.Description</label>
                        <input type="text" name="description" class="form-control"  value="@interviewRound.Description" />
                    </div>

                    <div class="form-group">
                        <label><span class="glyphicon "></span>@IPM.Web.MultiLanguage.Resource.GuidelineName</label>
                        <input type="text" name="description" class="form-control"  value="@interviewRound.Guideline.Name"/>                       
                    </div>

                    <div class="form-group">
                        <label><span class="glyphicon "></span>@IPM.Web.MultiLanguage.Resource.ListInterviewProcess</label>
                        <table class="table table-bordered">
                            <tr>
                                <th style="width: 10px">No</th>
                                <th style="width: 10px">@IPM.Web.MultiLanguage.Resource.ProcessName</th>

                            </tr>
                            @if (ViewBag.ListProcess != null)
                            {
                                var count = 1;
                                foreach (var item in ViewBag.ListProcess)
                                {
                                    <tr>
                                        <td style="text-align:left">@count</td>
                                        <td style="text-align:left">
                                            @item.ProcessName
                                        </td>
                                    </tr>
                                    count++;
                                }
                            }

                        </table>
                    </div>
                }
            }               <!-- /.box-body -->
            <div class="box-footer">

            </div>
        }
    </div>
    <!--/.col (right) -->

    <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon"></span>@IPM.Web.MultiLanguage.Resource.Close</button>
    </div>
</div>
