@using System.Security.Policy
@model IPM.Web.Models.CandidateViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @IPM.Web.MultiLanguage.Resource.AddCandidate
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> @IPM.Web.MultiLanguage.Resource.Home</a></li>
        <li><a href="@Url.Action("Index","Candidate")">@IPM.Web.MultiLanguage.Resource.CandidatesManagement</a></li>
        <li class="active">@IPM.Web.MultiLanguage.Resource.AddCandidate</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("Create", "Candidate", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                        <div class="box-body">
                            <h3>
                                @IPM.Web.MultiLanguage.Resource.PersonalInformation
                            </h3>
                            @Html.ValidationSummary(true)
                            @Html.EditorForModel()
                        </div>
                    <div class="box-footer">
                        <input type="submit" value="@IPM.Web.MultiLanguage.Resource.AddCandidateButton" class="btn btn-info pull-right" />
                        <input type="reset" value="@IPM.Web.MultiLanguage.Resource.ResetCandidateButton" class="btn btn-default" />
                        <a class="btn btn-default" href="@Url.Action("Index","Candidate")">@IPM.Web.MultiLanguage.Resource.CancelCandidateButton</a>
                   </div>
                }
            </div>
        </div>
    </div>
</section>
