@model IPM.Web.Models.MeetingRequestViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<section class="content-header">
    <h1>
        Edit Meeting Request
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i>@IPM.Web.MultiLanguage.Resource.Home</a></li>
        <li><a href="@Url.Action("Index","MeetingRequest")">Meeting Request</a></li>
        <li class="active">@IPM.Web.MultiLanguage.Resource.Edit Meeting Request</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- right column -->
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">@IPM.Web.MultiLanguage.Resource.Edit Meeting Requests</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm("Edit", "MeetingRequest", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            <label class="control-label col-sm-1" for="">ID</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.ID, new { @class = "form-control", @disabled = "disabled" })
                            </div>
                        </div>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.EditorForModel()
                    }
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                </div>
            </div>
        </div>
        <!--/.col (right) -->
    </div>

</section>



