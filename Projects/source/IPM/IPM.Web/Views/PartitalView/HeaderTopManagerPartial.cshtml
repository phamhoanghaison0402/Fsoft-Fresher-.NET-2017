<header class="main-header">
    <!-- Logo -->
    <a href="@Url.Action("Index","Home")" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>IPM</b></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>IPM</b></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown messages-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-language"></i>  <span class="hidden-xs">@IPM.Web.MultiLanguage.Resource.Language</span>
                    </a>
                    <ul class="dropdown-menu" style="height:85px; width:20px">
                        <li>
                            <ul class="menu">
                                <li>
                                    @foreach (var i in IPM.Common.SiteLanguages.AvailableLanguages)
                                    {
                                        @Html.ActionLink(i.LangFullName, "ChangeLanguage", "Home", new { lang = i.LangCultureName, returnUrl = HttpContext.Current.Request.Url.AbsoluteUri }, null)
                                    }
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>
                <li class="dropdown user user-menu">
                   
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/Content/dist/img/user.png" class="user-image" alt="User Image">
                        <span class="hidden-xs">@User.Identity.Name</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header" style="height:100px">
                            <p>
                                @User.Identity.Name
                            </p>
                            <p>Hi!</p>
                        </li>
                      
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-right">
                                <a href="@Url.Action("Logout", "Home")" class="btn btn-default btn-flat">@IPM.Web.MultiLanguage.Resource.Signout</a>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>