@using PagedList.Mvc
@model IPM.Model.Models.InterviewRound

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">@IPM.Web.MultiLanguage.Resource.DetailRound</h4>
    </div>
    <div class="modal-body">

        @using (Ajax.BeginForm("Detail", "InterviewRound", FormMethod.Post, new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "POST", UpdateTargetId = "interviewRound" }))

        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            if (Model != null)
            {

                <div class="form-group">
                    <label><span class="glyphicon "></span>Name</label>
                    <input type="text" name="roundName" class="form-control" disabled="disabled" value="@Model.RoundName" />
                </div>

                <div class="form-group">
                    <label><span class="glyphicon "></span>Description</label>
                    <input type="text" name="description" class="form-control" disabled="disabled" value="@Model.Description" />
                </div>

                    <div class="form-group">
                        <label><span class="glyphicon "></span>GuideLine</label>
                        <input type="text" id="guidelineName" name="description" class="form-control" disabled="disabled" value="@ViewBag.ListGuidelineName" />
                    </div>

                    <div class="form-group">
                        <label><span class="glyphicon "></span>List of Interview Process</label>
                        <table class="table table-bordered">
                            <tr>
                                <th style="width: 10px">No</th>
                                <th style="width: 10px">Process Name</th>

                            </tr>
                            @if (ViewBag.ListProcess != null)
                            {
                                var count = 1;
                                foreach (var item in ViewBag.ListProcess)
                                {
                                    <tr>
                                        <td class="text-left">@item.ID</td>
                                        <td class="text-left">
                                            @item.ProcessName
                                        </td>
                                    </tr>
                                    count++;
                                }
                            }

                        </table>
                    </div>
            }               <!-- /.box-body -->
                    <div class="box-footer">

                    </div>
        }
    </div>
    <!--/.col (right) -->

    <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon"></span>@IPM.Web.MultiLanguage.Resource.Close</button>
    </div>
</div>
